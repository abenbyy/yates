<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/primaryBlue</item>
    <item name="colorPrimaryDark">@color/primaryBlueDark</item>
    <item name="colorAccent">@color/primaryBlue</item>
</style>

    <!--  Application Theme without title bar  -->
    <style name="AppThemeWithoutActionBarMaterialComponents" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primaryBlue</item>
        <item name="colorPrimaryDark">@color/primaryBlueDark</item>
        <item name="colorAccent">@color/backWhite</item>
    </style>

    <style name="AppThemeWithoutActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primaryBlue</item>
        <item name="colorPrimaryDark">@color/primaryBlueDark</item>
        <item name="colorAccent">@color/backWhite</item>
    </style>



    <style name="Divider">
        <item name="android:background">#808080</item>
    </style>

    <style name="Divider.Horizontal" parent="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginHorizontal" tools:targetApi="o">10dp</item>
        <item name="android:layout_marginVertical" tools:targetApi="o">2.5dp</item>
        <item name="android:layout_height">1dp</item>

    </style>

</resources>
